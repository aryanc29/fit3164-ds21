# Environment variables for development
DEBUG=true
SECRET_KEY=dev-secret-key-change-in-production
ALLOWED_HOSTS=["*"]

# Database
DATABASE_URL=postgresql://weather_user:weather_pass@localhost:5432/weather_db

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Weather APIs
BOM_API_BASE_URL=http://www.bom.gov.au/fwo
METEOSTAT_API_KEY=your_meteostat_api_key_here
METEOSTAT_API_BASE_URL=https://api.meteostat.net/v1

# Google APIs
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
GOOGLE_WEATHER_API_BASE_URL=https://api.openweathermap.org/data/2.5

# JWT Authentication
JWT_SECRET_KEY=dev-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# File Upload
MAX_FILE_SIZE=52428800
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=[".csv", ".xlsx", ".xls"]

# Data Processing
MAX_RECORDS_PER_REQUEST=1000
DATA_VALIDATION_STRICT=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
